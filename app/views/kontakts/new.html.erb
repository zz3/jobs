<h1>New kontakt</h1>

<% form_for(@kontakt) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :inhalt %><br />
    <%= f.text_area :inhalt %>
  </p>
  <p>
    <%= f.label :kontaktart_id %><br />
    <%= f.text_field :kontaktart_id %>
  </p>
  <p>
    <%= f.label :bewerbung_id %><br />
    <%= f.text_field :bewerbung_id %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', kontakts_path %>
