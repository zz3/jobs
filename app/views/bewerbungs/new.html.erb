<% form_for(@bewerbung) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :stellenbeschreibung %><br />
    <%= f.text_field :stellenbeschreibung %>
  </p>
  <p>
    <%= f.label :bemerkung %><br />
    <%= f.text_area :bemerkung %>
  </p>
  <p>
    <%= f.label :referenz %><br />
    <%= f.text_field :referenz %>
  </p>
  <p>
  	<%= f.label :firma_id %><br />
  	<%= select('bewerbung', 'firma_id', @firma.collect {|fi| [fi.firma_kurz, fi.id]} ) %>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', bewerbungs_path %>
